{
  "compilerOptions": {
    "tsBuildInfoFile": "./build/.tsbuildinfo",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./build",
    "rootDir": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@api/*": [
        "src/api/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ]
    },
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}